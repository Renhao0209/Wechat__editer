{
  "name": "wechatedit",
  "private": true,
  "version": "0.1.0",
  "description": "A WeChat-style rich text editor with templates and themes.",
  "author": "wechatedit",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:desktop": "concurrently -k -n VITE,ELECTRON -c cyan,magenta \"vite\" \"wait-on http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .\"",
    "build:desktop": "npm run build && electron-builder",
    "dist": "npm run build:desktop",
    "dist:win": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/dist-win.ps1"
  },
  "dependencies": {
    "@tiptap/extension-character-count": "^3.17.1",
    "@tiptap/extension-color": "^3.17.1",
    "@tiptap/extension-highlight": "^3.17.1",
    "@tiptap/extension-image": "^3.17.1",
    "@tiptap/extension-link": "^3.17.1",
    "@tiptap/extension-text-align": "^3.17.1",
    "@tiptap/extension-text-style": "^3.17.1",
    "@tiptap/extension-underline": "^3.17.1",
    "@tiptap/react": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "markdown-it": "^14.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "concurrently": "^9.2.1",
    "wait-on": "^8.0.4",
    "cross-env": "^7.0.3"
  }
  ,
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.wechatedit.app",
    "productName": "微信排版助手",
    "icon": "build/icon.ico",
    "files": [
      "dist/**",
      "electron/**",
      "build/icon.ico",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "微信排版助手",
      "uninstallDisplayName": "微信排版助手",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
